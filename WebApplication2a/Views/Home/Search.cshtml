@model IEnumerable<WebApplication2a.Models.tbl_Product>
@{
    ViewBag.Title = "Search";
}

<h2>Search</h2>

<p>

    @using (Html.BeginForm("Search", "Home", FormMethod.Get))
    {
        <b> Search By :</b>
        @Html.RadioButton("searchBy", "productName", true)<text>ProductName</text>

        @Html.RadioButton("searchBy", "size")<text>Size</text>

        @Html.RadioButton("searchBy", "category")<text>Category</text>


        <br />
        @Html.TextBox("search")<input type="submit" value="search" />

        <input type="reset" value="clear" class="btn btn-sm btn-primary" id="btnClear" />


    }
    </p>

    <table class="table">

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MfgDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>

      @if (Model.Count() == 0)
       {
          <tr>
                   <td>
                       <h2 class="text-danger">Maching Data Not Found ! Try Again</h2> 
                   </td>
          </tr>

       }
      else
      {



        foreach (var item in Model)
         {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Product_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Size)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MfgDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>

            </tr>
         }
      }

    </table>

